<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/rentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="name goes here"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dueLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Due"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/red_corner_radius"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@+id/rentName"
        app:layout_constraintBottom_toBottomOf="@id/rentName"
        />

    <TextView
        android:id="@+id/rentDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="01 April 2022"
        android:textSize="@dimen/_9sdp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_7sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_calendar_green"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rentName"/>

    <TextView
        android:id="@+id/rentAmt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_15sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="1400"
        android:textSize="@dimen/_11sdp"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_7sdp"
        android:drawablePadding="@dimen/_5sdp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rentDate"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/rentAmt"
        />
</androidx.constraintlayout.widget.ConstraintLayout>