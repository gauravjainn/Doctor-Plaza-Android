<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="end">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/pop_up_bg"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="@id/rescheduleAppointment"
            app:layout_constraintEnd_toEndOf="@id/rescheduleAppointment"
            app:layout_constraintTop_toTopOf="@id/rescheduleAppointment"
            app:layout_constraintBottom_toBottomOf="@id/cancelAppointment"/>

        <TextView
            android:id="@+id/rescheduleAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Reschedule"
            android:elevation="@dimen/_5sdp"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="1sp"
            android:background="@color/colorPrimaryLight"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/rescheduleAppointment" />

        <TextView
            android:id="@+id/cancelAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:text="Cancel"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/_9sdp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/rescheduleAppointment"
            app:layout_constraintStart_toStartOf="@id/rescheduleAppointment"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

</androidx.constraintlayout.widget.ConstraintLayout>